---
import Card from "../Card/Card.astro";
import Content1 from "../Content/Content1.astro";
import "../../styles/TaxSection.scss";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Button from "../../components/Modal/Button";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section>
  <div class="container">
    <Content1
      tag={t("home.taxes.tag")}
      title={t("home.taxes.title")}
      subtitle={t("home.taxes.subtitle")}
      titleColor="white"
      subtitleColor="white"
    />
    <div class="card-wrap">
      <Card
        title={t("home.taxes.card1.title")}
        subtitle={t("home.taxes.card1.subtitle")}
        feature1={t("home.taxes.card1.feature1")}
        feature2={t("home.taxes.card1.feature2")}
        feature3={t("home.taxes.card1.feature3")}
        img="/home/company1.avif"
        btn={t("home.taxes.btn")}
        btnSrc={`/${lang}/contact`}
      />
      <Card
        title={t("home.taxes.card2.title")}
        subtitle={t("home.taxes.card2.subtitle")}
        feature1={t("home.taxes.card2.feature1")}
        feature2={t("home.taxes.card2.feature2")}
        feature3={t("home.taxes.card2.feature3")}
        img="/home/company2.png"
        btn="Apply for registration"
        btnSrc={`/${lang}/contact`}
      />
      <Card
        title={t("home.taxes.card3.title")}
        subtitle={t("home.taxes.card3.subtitle")}
        feature1={t("home.taxes.card3.feature1")}
        feature2={t("home.taxes.card3.feature2")}
        feature3={t("home.taxes.card3.feature3")}
        img="/home/company3.png"
        btn="Apply for registration"
        btnSrc={`/${lang}/contact`}
      />
    </div>
    <div class="btn-wrap">
      <h3>Still didn't Know which category ?</h3>
      <div class="btns-wrapper">
        <Button className="btn-stroke-yellow" client:visible>
          Book Appoinment
        </Button>
        <a
          href=`/${lang}/services`
          class="all-services btn-line-blue"
          style="color: white;">Browse All of Our Tax Services</a
        >
      </div>
    </div>
  </div>
</section>
