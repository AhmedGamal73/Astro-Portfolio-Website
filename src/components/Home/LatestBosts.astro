---
import PostCard from "../Card/PostCard.astro";
import Content1 from "../Content/Content1.astro";

---
<section class="posts-cont">
        <div class="up-row">
            <Content1
                tag="Our Latest Posts"
                title="Solutions for all your taxis"
                titleColor="#152040"
                subtitle="Pull up a chair in our office or stay on the couch. We have all the tax filing options you need. And by any file method, you'll always get the maximum for your recovery. Guaranteed."
                subtitleColor="#152040"
                btn="See All"
            />
        </div>
        <div class="cards-wrap">
            <PostCard 
                title="Here's A new Blog Post!!"
                subtitle="Pull up a chair in our office or stay on the couch. We have all the tax filing options you need. And by any file method, you'll always get the maximum for your recovery. Guaranteed."
                img="blog1.jpg"

            />
            <PostCard 
                title="Here's A new Blog Post!!"
                subtitle="Pull up a chair in our office or stay on the couch. We have all the tax filing options you need. And by any file method, you'll always get the maximum for your recovery. Guaranteed."
                img="blog2.jpg"

            />
            <PostCard 
                title="Here's A new Blog Post!!"
                subtitle="Pull up a chair in our office or stay on the couch. We have all the tax filing options you need. And by any file method, you'll always get the maximum for your recovery. Guaranteed."
                img="blog3.jpg"

            />
        </div>
        <a class="all-posts btn-stroke-yellow" href="#">See All Posts</a>
</section>

<style>
section.posts-cont{
    width: 100%;
    display: flex;
    gap: 3rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-block: 3rem;
    background: linear-gradient(186deg, rgba(255,255,255,1) 15%, rgba(232,244,250,1) 100%);
}

div.up-row {
    display: flex;
    justify-content: center;
    align-items: center;
}

div.cards-wrap {
    width: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 4rem;
}

.all-posts {
    padding-inline: 2rem;
}

@media (max-width: 769px) {
    .cards-wrap {
        flex-direction: column;
    }
}
</style>