---
import Content1 from "../Content/Content1.astro";

export interface props {
  team: "string";
  teamAlt: "string";
  title: "string";
  subtitle: "string";
}

const a = Astro.props;
---

<section class="about-hero">
  <div class="img-col">
    <span class="bgc-line"></span>
    <span class="bgc-line"></span>
    <span class="bgc-line"></span>
    <img src={a.heroImg} alt={a.heroImgAlt} />
  </div>
  <div class="content-col">
    <h1>{a.title}</h1>
    <p>{a.subtitle}</p>
  </div>
</section>

<style>
  .about-hero {
    display: flex;
    flex-direction: column-reverse;
    justify-content: center;
    align-items: center;
    gap: 6rem;
    background: linear-gradient(
      7deg,
      rgb(255, 255, 255) 15%,
      rgb(232, 244, 250) 100%
    );
  }
  .about-hero .content-col {
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-block: 6rem;
    text-align: center;
    padding-inline: 1rem;
  }
  .about-hero .content-col h1 {
    color: #dfc063;
  }
  .about-hero .content-col p {
    width: 70%;
  }

  .img-col {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 100%;
    margin-top: 3rem;
  }

  .img-col span.bgc-line {
    height: 60px;
    width: 100%;
    display: block;
  }
  .img-col span:nth-child(1) {
    background-color: #4ac3ff;
  }
  .img-col span:nth-child(2) {
    background-color: #afe4ff;
  }
  .img-col span:nth-child(3) {
    background-color: #152040;
  }

  .img-col img {
    height: 380px;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }

  @media (max-width: 768px) {
    .about-hero .content-col {
      width: 90%;
    }
    .about-hero .content-col p {
      width: 100%;
    }

    .about-hero {
      gap: 0;
    }

    div.img-col img {
      max-height: 240px;
    }

    h3 {
      font-size: 3vw;
    }
  }

  .about-hero {
    opacity: 0;
    animation: fadeIn 1.3s ease-in forwards;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
