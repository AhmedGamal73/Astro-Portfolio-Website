---
import Button from "../Modal/Button";
export interface Props {
  span: string;
  title: string;
  subtitle: string;
  consaltBtn: string;
  btn: string;
  btnSrc: string;
}
const p = Astro.props;
---

<div class="content2-container">
  <div class="content-wrap">
    <h2>{p.title} <span>{p.span}</span></h2>
    <p>{p.subtitle}</p>
  </div>
  <div class="btn-wrap">
    <Button className="btn-stroke-yellow" client:visible>{p.consaltBtn}</Button>
    <a href={p.btnSrc} class="btn-line-blue">{p.btn}</a>
  </div>
</div>

<style>
  .content2-container {
    width: 60%;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: start;
    justify-content: center;
    padding-inline-start: 7rem;
  }
  p {
    text-align: start;
    padding-top: 0.5rem;
  }
  .btn-wrap {
    display: flex;
    gap: 2.3rem;
    justify-content: center;
    align-items: center;
    gap: 2.3rem;
  }

  span {
    color: #0080f9;
    font-family: "Poppins light";
    font-size: 2.2vw !important ;
  }

  @media (max-width: 768px) {
    .content-wrap {
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .content-wrap p,
    h2 {
      text-align: center;
    }
    .content-wrap h2 span {
      font-size: 6.5vw !important;
    }

    .content2-container {
      width: 100%;
      padding: 0;
      align-items: center;
    }

    .btn-wrap {
      width: 100%;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      padding: 0;
      gap: 0.5rem;
    }

    .btn-wrap a {
      padding-inline-start: 1rem;
    }
    span {
      font-size: 5vw !important;
    }
  }
</style>
