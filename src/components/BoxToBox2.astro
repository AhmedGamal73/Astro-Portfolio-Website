---
import Icon from "astro-icon";

export interface props {
  title: String;
  subtitle: String;
  bgc: String;
  iconColor: String;
  contentIcon: String;
  contDirection: String;
  icon: String;
}

const p = Astro.props;
---

<section style={{ flexDirection: p.contDirection }} class="box-cont">
  <div style={{ background: p.bgc }} class="left-col">
    <Icon name={p.icon} style=`width: 33px; color: ${p.iconColor}` />
  </div>

  <div class="right-col">
    <div class="content-wrap">
      <h3>{p.title}</h3>
      <p>{p.subtitle}</p>
    </div>
  </div>
</section>

<style>
  [astro-icon] {
    width: 150px;
  }

  section.box-cont {
    width: 100%;
    min-height: 55vh;
    padding-block: 0;
    display: flex;
    justify-content: center;
  }

  .box-cont div.left-col {
    width: 50%;
    min-height: 55vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .box-cont div.right-col {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .box-cont div.right-col div.content-wrap {
    width: 70%;
    display: flex;
    justify-content: start;
    flex-direction: column;
    gap: 1rem;
  }

  .box-cont div.right-col p {
    width: 80%;
  }

  @media (max-width: 768px) {
    [astro-icon] {
      width: 50px;
    }
    .box-cont {
      border-bottom: 1px solid rgba(151, 151, 151, 0.164);
    }

    div.left-col {
      width: 30% !important;
    }
    div.right-col {
      width: 70% !important;
    }
    .box-cont div.right-col div.icon-wrap {
      width: 25px;
      height: 25px;
    }
    div.content-wrap {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 90% !important;
    }
    div.content-wrap p {
      width: 100% !important;
      text-align: start;
    }
  }
</style>
