---
import load from 'astro-icon/lib/utils';
import Content1 from '../../components/Content/Content1.astro';
import MultiStepForm from '../../components/Form/MultiStepForm';
import Layout from '../../layouts/Layout.astro';
---


<Layout title='job application'>
    <section class="job-container">
        <div class="con-col">
            <div class="left-col">
                <img src="/job1.jpg" alt="">
            </div>
            <div class="right-col">
                <MultiStepForm  client:load/>
            </div>
    
        </div>
    </section>
</Layout>


<style>
   section.job-container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        height: 100vh;
        background: var(--bgc);
    } 

    div.con-col {
        display: flex;
        width: 90vw;
        height: 80vh;
        border-radius: 1.1rem;
        box-shadow: var(--box-shadow);
        background: white;
    }
    
    div.right-col {
        width: 60%;
    }

    div.con-col div.left-col {
        width: 40%;
        padding: 0;
    }
    div.con-col div.left-col img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 1.1rem 0 0 1.1rem;
    }
    div.con-col div.right-col {
        width: 70%;
    }
    div.con-col div.right-col {
        padding-inline-start: 3rem;
        width: 70%;
    }
</style>
