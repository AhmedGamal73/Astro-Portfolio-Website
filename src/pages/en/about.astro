---
import AboutHero from "../../components/About/AboutHero.astro";
import BoxToBox from "../../components/About/BoxToBox.astro";
import OurTeam from "../../components/About/OurTeam.astro";
import OurProcess from "../../components/About/OurProcess.astro";
import { Layout, Base } from "../../layouts";
import LatestBosts from "../../components/Home/LatestBosts.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Colors
const prim1 = "#152040",
  prim3 = "#DFC063",
  blue = "#0080F9",
  sky = "#B7E6FD";
---

<Layout title="About Us">
  <Base>
    <AboutHero
      heroImg="about-hero.png"
      title={t("about.hero.title")}
      subtitle={t("about.hero.subtitle")}
    />
    <BoxToBox
      uniqueKey="2"
      title={t("about.box1.title")}
      subtitle={t("about.box1.subtitle")}
      bgc={prim3}
      iconColor={prim1}
      contDirection="row-reverse"
      icon="people-team"
    />
    <BoxToBox
      uniqueKey="1"
      title={t("about.box2.title")}
      subtitle={t("about.box2.subtitle")}
      bgc={blue}
      iconColor=`var(--prim3)`
      contDirection="row"
      icon="arrow-growth"
    />
    <BoxToBox
      uniqueKey="3"
      title={t("about.box3.title")}
      subtitle={t("about.box3.subtitle")}
      bgc={sky}
      iconColor=`var(--prim1)`
      contDirection="row-reverse"
      icon="eye"
    />
    <BoxToBox
      uniqueKey="4"
      title={t("about.box4.title")}
      subtitle={t("about.box4.subtitle")}
      bgc={prim1}
      iconColor=`var(--prim3)`
      contDirection="row"
      icon="internet-of-things"
    />
    <OurTeam
      tag={t("about.team.tag")}
      title={t("about.team.title")}
      subtitle={t("about.team.subtitle")}
    />
    <OurProcess
      id="process"
      title={t("about.process.title")}
      subtitle={t("about.process.subtitle")}
      titleProcess1={t("about.process.step1.title")}
      subtitleProcess1={t("about.process.step1.subtitle")}
      titleProcess2={t("about.process.step2.title")}
      subtitleProcess2={t("about.process.step2.subtitle")}
      titleProcess3={t("about.process.step3.title")}
      subtitleProcess3={t("about.process.step3.subtitle")}
      titleProcess4={t("about.process.step4.title")}
      subtitleProcess4={t("about.process.step4.subtitle")}
      titleProcess5={t("about.process.step5.title")}
      subtitleProcess5={t("about.process.step5.subtitle")}
    />
    <LatestBosts />
  </Base>
</Layout>
