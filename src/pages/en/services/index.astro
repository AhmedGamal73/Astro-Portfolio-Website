---
import { Layout } from "../../../layouts";
import Content1 from "../../../components/Content/Content1.astro";
import "bootstrap/dist/css/bootstrap.min.css";
import Icon from "astro-icon";
import Card from "../../../components/Card/Card.astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";
import Button from "../../../components/Modal/Button";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Services">
  <section>
    <div class="service-hero">
      <Icon
        style="width: 63px; position: absolute; top: 0; rotate: 180deg;"
        name="arrow-up-thin"
      />
      <Content1
        tag=""
        title={t("services.hero.title")}
        subtitle={t("services.hero.subtitle")}
      />
      <Button className="btn-stroke-blue-heavy" client:load>
        Contact one of our experts
      </Button>
    </div>
    <div class="content-103">
      <div class="container">
        <div class="content row">
          <Content1 tag="services" title="Our Services" />

          <a
            href={`/${lang}/services/bookkeeping`}
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="book-light" />
                </div>
                <!-- service-icon -->
                <h3 class="service-title">{t("services.bookkeeping.title")}</h3>
                <p class="service-description">
                  {t("services.bookkeeping.subtitle")}
                </p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>

          <a
            href={`/${lang}/services/audit`}
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="audit-outlined" />
                </div>
                <!-- .s-icon -->
                <h3 class="service-title">{t("services.audit.title")}</h3>
                <p class="service-description">
                  {t("services.audit.subtitle")}
                </p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>

          <a
            href={`/${lang}/services/taxes`}
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="money-thin" />
                </div>
                <!-- .s-icon -->
                <h3 class="service-title">{t("services.taxes.title")}</h3>
                <p class="service-description">
                  {t("services.taxes.subtitle")}
                </p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>

          <a
            href={`/${lang}/career`}
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="work-outline" />
                </div>
                <!-- .s-icon -->
                <h3 class="service-title">{t("services.jobs.title")}</h3>
                <p class="service-description">{t("services.jobs.subtitle")}</p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>

          <a
            href="#"
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="course" />
                </div>
                <!-- .s-icon -->
                <h3 class="service-title">{t("services.courses.title")}</h3>
                <p class="service-description">
                  {t("services.courses.subtitle")}
                </p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>

          <a
            href="#our-programes"
            style="text-decoration: none!important; color: black; cursor: pointer "
            class="col-md-4 col-sm-4"
          >
            <div class="service-post">
              <div class="service-content">
                <div class="service-icon">
                  <Icon name="programming-broken" />
                </div>
                <!-- .s-icon -->
                <h3 class="service-title">{t("services.programmes.title")}</h3>
                <p class="service-description">
                  {t("services.programmes.subtitle")}
                </p>
              </div>
              <!-- service-content -->
              <div class="service-hover"></div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="courses-container">
    <Content1
      tag={t("services.programs.title")}
      title={t("services.programs.subtitle")}
      titleColor="white"
    />
    <div id="our-programes" class="card-container">
      <Card
        size="40%"
        img="/service/program1.png"
        title={t("services.program1.title")}
        subtitle={t("services.program1.subtitle")}
        feature1={t("services.program1.feature1")}
        feature2={t("services.program1.feature2")}
        feature3={t("services.program1.feature3")}
        btnSrc="https://clicksolutionseg.tech"
        btn="See All Features"
        newTab="_blanck"
      />
      <Card
        img="/service/program2.png"
        size="40%"
        title={t("services.program2.title")}
        subtitle={t("services.program2.subtitle")}
        feature1={t("services.program2.feature1")}
        feature2={t("services.program2.feature2")}
        feature3={t("services.program2.feature3")}
        btn="See All Features"
        btnSrc="https://clicksolutionseg.tech"
        bgc="var(--accent2)"
        newTab="_blanck"
      />
      <Card
        size="60%"
        featureSort="row"
        img="/service/program3.png"
        title={t("services.program3.title")}
        subtitle={t("services.program3.subtitle")}
        feature1={t("services.program3.feature1")}
        feature2={t("services.program3.feature2")}
        feature3={t("services.program3.feature3")}
        btn="See All Features"
        btnSrc="https://clicksolutionseg.tech"
        newTab="_blanck"
        bgc="var(--accent1)"
      />
    </div>
  </section>
  <section class="consaltant-container">
    <div class="right">
      <h3>{t("services.consaltant.title")}</h3>
      <p>{t("services.consaltant.subtitle")}</p>
      <div class="btn-cont">
        <Button className="btn-stroke-yellow" client:load>
          {t("services.consaltant.btn")}
        </Button>
      </div>
    </div>
    <div class="left">
      <img src="/service/consulting.png" />
    </div>
  </section>
</Layout>

<style>
  /* Consultant Section */
  .service-hero button {
    padding: 13px 52px;
  }
  .service-hero .content-wrap {
    padding-top: 5rem;
  }
  section.consaltant-container {
    padding: 6rem 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  section.consaltant-container .right {
    padding: 2rem 2rem 0 3rem;
    width: 40%;
  }
  section.consaltant-container .right p {
    text-align: start;
  }
  section.consaltant-container .left img {
    margin-bottom: 2rem;
  }

  section.courses-container {
    background-color: var(--prim1);
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-block: 3rem;
    border-radius: 1.5rem;
  }
  div.card-container {
    display: flex;
    width: 80%;
    gap: 6rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    padding-inline: 2rem;
  }

  .service-hero {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    min-height: 40vh;
    background: var(--prim3);
    padding-block: 6rem;
    box-shadow: var(--boxShadow2);
  }

  .service-hero a {
    border-radius: 4px;
    padding: 0.8rem 3rem;
  }
  .service-hero a:hover {
    background: var(--prim3);
    border: 1px solid var(--prim1);
    color: var(--prim1);
  }

  .content-103 {
    background: var(--bgc);
    padding-block: 50px;
  }

  .content-103 .sercies-title {
    text-align: center;
    padding: 50px 0;
  }

  .service-post {
    background: #fff;
    padding: 30px;
    text-align: center;
    cursor: pointer;
    position: relative;
    z-index: 12;
    margin-bottom: 30px;
    -moz-box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.08);
    -webkit-box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.08);
    box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.08);
    border-radius: 8px;
  }
  .content-103 .service-content {
    position: relative;
    z-index: 13;
  }
  .content-103 .service-icon {
    margin: 10px 0 20px 0;
    width: 50px;
    height: 50px;
    border-radius: 25px;
    text-align: center;
    border: 2px solid var(--prim3);
    margin-left: auto;
    margin-right: auto;
    line-height: 50px;
    -moz-transition: color, 250ms;
    -o-transition: color, 250ms;
    -webkit-transition: color, 250ms;
    transition: color, 250ms;
  }
  .content-103 .service-icon [astro-icon] {
    padding-bottom: 5px;
    width: 33px;
    color: var(--prim3);
  }
  .content-103 .service-title {
    font-size: 16px;
    font-weight: normal;
    margin-bottom: 15px;
    -moz-transition: color, 250ms;
    -o-transition: color, 250ms;
    -webkit-transition: color, 250ms;
    transition: color, 250ms;
  }
  .content-103 .service-post:hover .service-title {
    color: #fff;
  }
  .content-103 .service-description {
    -moz-transition: color, 250ms;
    -o-transition: color, 250ms;
    -webkit-transition: color, 250ms;
    transition: color, 250ms;
  }
  .content-103 .service-post:hover .service-description {
    color: #fff;
  }

  .content-103 .service-hover {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 11;
    width: 100%;
    height: 0px;
    background: #152040;
    -moz-transition: width, 250ms;
    -o-transition: width, 250ms;
    -webkit-transition: width, 250ms;
    transition: width, 250ms;
    border-radius: 8px;
  }
  /*hover-background-color effect*/
  .content-103 .service-post:hover .service-hover {
    height: 100%;
  }
  .btn-cont {
    display: flex;
    justify-content: start;

    font-size: 1vw;
  }

  @media (max-width: 768px) {
    .container .content {
      display: flex;
      justify-content: center;
    }
    .content-wrap {
      width: 80% !important;
    }
    .service-hero {
      height: 55vh;
    }

    .consaltant-container {
      flex-direction: column-reverse;
      padding-inline: 0.8rem !important;
    }

    .consaltant-container div.right {
      padding: 0;
      width: 100% !important;
    }

    .right h3 {
      text-align: center;
    }

    img {
      width: 105%;
    }
    .right p {
      text-align: center !important;
      padding-bottom: 1.5rem;
    }

    .btn-cont {
      justify-content: center;
    }
  }
</style>
