---
import { Layout } from "../../layouts";
import ContentToggle from "../../components/ContentToggle";
---

<Layout title="Contact Us">
  <div class="contact-container">
    <div class="left-col">
      <img src="https://images.pexels.com/photos/10303889/pexels-photo-10303889.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="">
    </div>
    <div class="right-col">
      <ContentToggle client:load/>
    </div>
  </div>
</Layout>


<style>
  * {
    transition: all 0.3s ease-in-out;
  }
  
  .contact-container {
    display: flex;
    position: relative;
    width: 100%;
    min-height: 100vh;
    background: var(--bg-color);
  }
  
  .left-col {
    width: 50%;
    position: relative;
    min-height: 120vh;
    background-size: cover;
  }
  
  .left-col img {
    width: 100%;
    height: 100vh;
    position: sticky;
    position: -webkit-sticky;
    background-repeat: no-repeat;
    top: 0;
  }
  
  .right-col {
    background: var(--bg-color);
    width: 50%;
    padding: 5rem 3.5rem;
    display: flex;
    justify-content: start;
    align-items: center;
    flex-direction: column;
  }

  @media (max-width: 768px) {
    .contact-container {
      flex-direction: column;

    }

    .left-col {
      display: none;
    }

    .right-col {
      width: 100%;
      padding: 0!important;
    }
  }
</style>