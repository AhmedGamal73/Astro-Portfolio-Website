---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Home/Hero.astro";
import PartnersSlider from "../../components/Home/PartnersSlider.astro";
import TaxSection from "../../components/Home/TaxSection.astro";
import Bookkeeping from "../../components/Home/Bookkeeping.astro";
import Development from "../../components/Home/Development.astro";
import LatestBosts from "../../components/Home/LatestBosts.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Home">
  <Hero
    title={t("home.hero.title")}
    span={t("home.hero.span")}
    subtitle={t("home.hero.subtitle")}
    consaltBtn={t("home.hero.consaltBtn")}
    btn={t("home.hero.btn.process")}
    btnSrc={`/${lang}/about#process`}
  />
  <PartnersSlider />
  <Bookkeeping
    bkeepTitle={t("home.bookkeeping.title")}
    bkeepSubTitle={t("home.bookkeeping.subtitle")}
    bkeepSpan={t("home.bookkeeping.span")}
    bkeepBn1={t("home.bookkeeping.consaltBtn")}
    bkeepBtn2={t("home.bookkeeping.btn")}
    bkeepBtn2Src={`/${lang}/services/bookkeeping`}
    auditTitle={t("home.audit.title")}
    auditSubTitle={t("home.audit.subtitle")}
    auditSpan={t("home.audit.span")}
    auditBn1={t("home.audit.consaltBtn")}
    auditBtn2={t("home.audit.btn")}
    auditBtn2Src={`/${lang}/services/audit`}
  />
  <Development
    tag="Why choose to do business with us"
    title="Our enterprise development steps"
    stepTitle1={t("home.development.firstTitle")}
    stepSubtitle1={t("home.development.firstSubTitle")}
    stepTitle2={t("home.development.secondTitle")}
    stepSubtitle2={t("home.development.secondSubTitle")}
    stepTitle3="Fast turnaround time."
    stepSubtitle3="Pull up a chair in our office or stay on the couch. We have all the tax filing options you need. And by any file method, you'll always get the maximum for your recovery. Guaranteed."
    img="mechanic.jpg"
    btn1="See All Of Our Services"
    btn2="Know More About Us"
    btnSrc1={`/${lang}/services`}
    btnSrc2={`/${lang}/about`}
  />

  <LatestBosts />
</Layout>
